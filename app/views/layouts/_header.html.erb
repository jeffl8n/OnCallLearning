<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a class="brand" style="margin-left:0px;" href="/">OnCall Learning</a>
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li class="divider-vertical"></li>
            <li id="new_course_item">
              <% if !@course_processing.nil? %>
                <a><img src="http://app.reviewmyelearning.com/static/images/waiting.gif" id="loading-indicator" /> Processing upload...</a>
              <% else %>
                <%=link_to "Upload a Course ", '/courses/new'%>
              <% end %>
            </li>
      </ul>
      <div class="pull-right">
        <ul class="nav pull-right">
          <li><%= link_to "Support", "/support"  %></li>
          <% if !user_signed_in? %>
            <li class="divider-vertical"></li>
            <li class="dropdown">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In / Sign Up <strong class="caret"></strong></a>
              <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                <%= simple_form_for("user", :url => user_session_path ) do |f| %>
                  <div><%= f.label :email %>
                    <%= f.email_field :email, :class=>"input-large", :style => "margin-bottom: 15px;" %></div>

                  <div><%= f.label :password %>
                    <%= f.password_field :password, :style => "margin-bottom: 15px;"%></div>

                  <div><%= f.check_box :remember_me, :style => "float: left; margin-right: 10px;" %>
                    <%= f.label :remember_me, :class => "string optional" %></div>

                  <%= f.submit "Sign in",:class => "btn btn-primary btn-block" %>
                <% end %>
                <div style="padding-bottom: 15px"><a class="btn btn-primary btn-block" style="color:#FFFFFF;" href="/signup">Sign Up</a>
                  <%= link_to "Forgot your password?", new_password_path(:user), :class=>"btn btn-link" %>
                </div>
              </div>
            </li>
          <% else %>
            <% if current_user.admin? %>
              <li class="divider-vertical"></li>
              <li><%= link_to "Admin", "/admin"  %></li>
              <li class="divider-vertical"></li>
            <% end %>
            <li class="dropdown">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown"><%= current_user.email %> <strong class="caret"></strong></a>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="icon-user"></i> My Profile'), "/profile" %></li>
                <li class="divider"></li>
                <li><%= link_to(raw('<i class="icon-off"></i>  Logout'), destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
